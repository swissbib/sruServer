                    </ns:schema>
                    <ns:schema retrieve="true" sort="false"
                        identifier="http://www.w3.org/1999/02/22-rdf-syntax-ns"
                        location="http://www.w3.org/2000/07/rdf.xsd" name="RDFxml">
                        <ns:title lang="de" primary="true">PicaPlus to RDF Konversion /
                            DNB-Titeldaten, ZDB-Titeldaten, Normdaten</ns:title>
                    </ns:schema>
                    <ns:schema retrieve="true" sort="false"
                        identifier="http://www.w3.org/1999/02/22-rdf-syntax-ns"
                        location="http://www.w3.org/2000/07/rdf.xsd" name="BibframeRDFxml">
